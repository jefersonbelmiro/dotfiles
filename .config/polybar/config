[module/i3]
type = internal/i3
pin-workspaces = true
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
fuzzy-match = true
; strip-wsnumbers = true

; ws-icon-0 = 1;
; ws-icon-1 = 2;
; ws-icon-2 = 3; 
; ws-icon-3 = 4;
; ws-icon-4 = 5;
; ws-icon-5 = 6;
; ws-icon-6 = 7;
; ws-icon-7 = 8;
; ws-icon-8 = 9;
; ws-icon-9 = 10;10

